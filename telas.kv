            size_hint: .48, .07
            pos_hint: {"center_x": .5, "center_y": .1}
            Image:
                source: "images/googlelogo.png"
            Image:
                source: "images/face.png"
            Image:
                source: "images/linke.png"
        MDLabel:
            text: "Não tem uma conta?"
            font_name: "BPoppins"
            font_size: "11sp"
            pos_hint: {"center_x": .68, "center_y": .04}
            color: rgba(135, 133, 193, 255)
        MDTextButton:
            text: "Cadastre-se"
            font_name: "BPoppins"
