<InicioScreen>:
    name: 'inicio'
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "images/logo1.png"
            pos_hint: {"center_x": .18, "center_y": .95}
        Image:
            source: "images/troca.jpg"
            size_hint: 1.0, 1.0
            pos_hint: {'center_x': .5, 'center_y': .65}
        MDLabel:
            text: "O L Á !"
            font_name: "BPoppins"
            font_size: "23sp"
            pos_hint: {'center_y': .38}
            halign: "center"
            color: rgba(34, 34, 34, 255)
        MDLabel:
            text: "Aqui sua habilidade é importante"
            font_name: "MPoppins"
            font_size: "13sp"
            size_hint_x: .85
            pos_hint: {'center_x': .5, 'center_y': .3}
            halign: "center"
            color: rgba(127, 127, 127, 255)
        Button:
            text: "LOGIN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .18}
            background: 0, 0, 0, 0
            font_name: "BPoppins"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            text: "Cadastre-se"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .09}
            background: 0, 0, 0, 0
            font_name: "BPoppins"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "cadastro"
            canvas.before:
                Color:
                    rgba: 52, 0, 231, 255
                RoundedRectangle:
                    pos: self.x, self.y
                    size: self.width, 5
                    radius: [5, 5, 5, 5]

