<PrincipalScreen>:
    MDBoxLayout: 
        orientation: 'vertical'

    MDBottomNavigation:
        panel_color: 1, 0, 1, 1

        MDBottomNavigationItem:
            name: 'Screen1'
            text: 'Início'
            icon: 'home'

        MDBottomNavigationItem:
            name: 'Screen2'
            text: 'Pesquisar'
            icon: 'magnify'

        MDBottomNavigationItem:
            name: 'Screen4'
            text: 'Mensagens'
            icon: 'send'
    
    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: 'Pais, Estado'
            md_bg_color: "#2196F3"
            elevation: 10
            right_action_items: [['magnify'], ['bell'], ['heart']]
            left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
            md_bg_color: '#2196F3'
            elevation: 0

        MDLabel:
            id: lbl_msg
            text: 'teste'
            halign: 'center'

    MDNavigationDrawer:
        id: nav_drawer
        orientation: 'vertical'
        
        Image:
            source: 'images/logo1.png'
            size_hint: None, None
            size: '100dp', '100dp'
        
        MDLabel:
            text: 'Nome do Usuario'
            adaptive_height: True
            halign: 'center'

        MDNavigationDrawerMenu:

            MDNavigationDrawerLabel:
                text: "Mail"

            MDNavigationDrawerItem:
                icon: 'inbox-outline'
                text: 'Caixa de Entrada'
                right_text: '24'
                on_press: nav_drawer.set_state('close')

            MDNavigationDrawerItem:
                icon: 'send'
                text: 'Mensagens'

            MDNavigationDrawerItem:
                icon: 'heart'
                text: 'Favoritos'

            MDNavigationDrawerItem:
                icon: 'trash-can'
                text: 'Lixeira'

            MDNavigationDrawerItem:
                icon: 'cog'
                text: 'Configurações'

            MDNavigationDrawerItem:
                icon: 'account-circle'
                text: 'Perfil'

            MDNavigationDrawerDivider:
                color: "#4A463A"

            MDNavigationDrawerItem:
                icon: 'information'
                text: 'Ajuda'
                
    MDFloatingActionButton:
        name: 'Screen3'
        text: 'Anunciar'
        icon: 'plus'
        md_bg_color: 1, 0, 1, 1
        pos_hint: {'center_x':.87,'center_y':.2}
        on_release:
            root.manager.transition.direction = 'left'
            root.manager.current = 'anuncio'

<DrawerItem@MNNavigationDrawerItems>
    icon_color: "#4A463A"
    text_color: "#4A463A"
    right_text_color: '#4A463A'
    focus_color: '#B5DCFB'
