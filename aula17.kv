<DrawerItem@MNNavigationDrawerItems>
    icon_color: "#4A463A"
    text_color: "#4A463A"
    right_text_color: '#4A463A'
    focus_color: '#B5DCFB'
    ripple_collor: "#FDBCB5"


<MainScreenView>
    MDBoxLayout:
        Orientation: 'Vertical'
        Spacing: 20
        MDTopAppBar:
            Title: 'MDTopAppBar'
            anchor_title: 'left'
            left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
            md_bg_color: '#2196F3'
            elevation: 0

        MDLabel:
            id: lbl_msg
            text: 'teste'
            halign: 'center'

MDNavigationDrawer:
    id: nav_drawer
    orientation: 'vertical'
    Image:
        source: 'images/logo1.png'
        size_hint: None, None
        size: '200dp', '200dp'
    MDLabel:
        text: 'Nome do Usuario'
        adaptive_height: True
        halign: 'center'

    MDNavigationDrawerMenu:

        #MDNavegationDrawerHeader:
            #title: "E-Scambo"
            #source: "escambo.png"
            #spacing: "10dp"
            #padding: ('12dp',0,0,'50dp')

        MDNavigationDrawerLabel:
            text: "Mail"

        DrawerItem:
            icon: 'inbox-outline'
            text: 'Caixa de Entrada'
            right_text: '24'
            on_press:
                nav_drawer.set_state('close')

        DrawerItem:
            icon: 'send'
            text: 'Mensagens'

        DrawerItem:
            icon: 'heart'
            text: 'Favoritos'

        DrawerItem:
            icon: 'trash-can'
            text:  'Lixeira'
        DrawerItem:
            icon: 'cog'
            text: 'Configurações'

        DrawerItem:
            icon: 'account-circle'
            text: 'Perfil'

        MDNavegationDrawerDivider:
            color: "#4A463A"

        DrawerItem:
            icon: 'information'
            text: 'Ajuda'